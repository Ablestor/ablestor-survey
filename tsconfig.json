{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
  },
  "exclude": ["node_modules", "src/**/*.demo.*"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}